{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Display 1",
    "width": 1000,
    "height":800,
    "data": {
        "url": "./data/countries-by-intentional-homicide-rate.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "lookup": "Country",
            "from": {
                "data": {
                    "url": "./data/countryInfo.csv",
                    "format": {
                        "type": "csv"
                    }
                },
                "key": "name",
                "fields": ["latitude", "longitude"]
            }
        }
    ],
    "projection": {
        "type": "identity",
        "reflectY": true
    },
    "mark": "circle",
    "encoding": {
        "longitude": {
            "field": "longitude",
            "type": "quantitative"
        },
        "latitude": {
            "field": "latitude",
            "type": "quantitative"
        },
        "size": {
            "field": "Rate",
            "type": "quantitative",
            "title": "Homicide Rate"
        },
        "color": {
            "field": "Rate",
            "type": "quantitative"
        },
        "tooltip": [
            { "field": "Country", "type": "nominal" },
            { "field": "Rate", "type": "quantitative" }
        ]
    }
}